@page "/"
@using EditorPortal.Services
@inject NewsroomStateStore Store
@using Microsoft.AspNetCore.Components.Forms

<PageTitle>Newsroom Control Center</PageTitle>

<h1 class="display-5 mb-4">Editor-in-Chief Dashboard</h1>

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-primary text-white">Active Stories</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var story in Store.ActiveStories)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">@story.Headline</div>
                                <small class="text-muted">@story.Stage</small>
                            </div>
                            <span class="badge text-bg-secondary">@story.Priority</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-info text-white">Live Orchestrations</div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    @foreach (var run in Store.LiveOrchestrations)
                    {
                        <li class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <div>@run.StoryId</div>
                                    <small class="text-muted">@run.State</small>
                                </div>
                                <span class="badge rounded-pill text-bg-success">@run.Progress%</span>
                            </div>
                            <div class="progress mt-2" role="progressbar" aria-valuenow="@run.Progress" aria-valuemin="0" aria-valuemax="100">
                                <div class="progress-bar" style="width:@run.Progress%"></div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card h-100 shadow-sm">
            <div class="card-header bg-warning">Escalations</div>
            <div class="card-body">
                @if (!Store.Escalations.Any())
                {
                    <p class="text-muted">No manual approvals pending.</p>
                }
                else
                {
                    <ul class="list-group list-group-flush">
                        @foreach (var escalation in Store.Escalations)
                        {
                            <li class="list-group-item">
                                <div class="fw-semibold">@escalation.Title</div>
                                <small>@escalation.Reason</small>
                                <div class="mt-2">
                                    <button class="btn btn-success btn-sm me-2" @onclick="() => Store.ResolveEscalation(escalation.Id, true)">Approve</button>
                                    <button class="btn btn-danger btn-sm" @onclick="() => Store.ResolveEscalation(escalation.Id, false)">Send Back</button>
                                </div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

<section id="pitches" class="mt-5">
    <h2 class="h4">Pitch Board</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <EditForm Model="Store.NewPitch" OnValidSubmit="Store.SubmitPitchAsync">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Headline Idea</label>
                        <InputText class="form-control" @bind-Value="Store.NewPitch.Headline" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Beat</label>
                        <InputText class="form-control" @bind-Value="Store.NewPitch.Beat" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Priority</label>
                        <InputNumber class="form-control" @bind-Value="Store.NewPitch.Priority" />
                    </div>
                </div>
                <div class="mt-3">
                    <label class="form-label">Angle</label>
                    <InputTextArea class="form-control" @bind-Value="Store.NewPitch.Angle" Rows="3" />
                </div>
                <div class="mt-3 text-end">
                    <button class="btn btn-outline-primary" type="submit">Submit Pitch</button>
                </div>
            </EditForm>
        </div>
    </div>
</section>

<section id="policies" class="mt-5">
    <h2 class="h4">Coverage Priorities</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <EditForm Model="Store.Priorities" OnValidSubmit="Store.SavePriorities">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Top Beat</label>
                        <InputText class="form-control" @bind-Value="Store.Priorities.PrimaryBeat" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">SEO Focus</label>
                        <InputText class="form-control" @bind-Value="Store.Priorities.SeoTheme" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Paywall Mode</label>
                        <InputSelect class="form-select" @bind-Value="Store.Priorities.PaywallMode">
                            <option value="Metered">Metered</option>
                            <option value="Hard">Hard</option>
                            <option value="Open">Open</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="mt-3 text-end">
                    <button class="btn btn-primary" type="submit">Save</button>
                </div>
            </EditForm>
        </div>
    </div>
</section>

<section id="analytics" class="mt-5">
    <h2 class="h4">Analytics Snapshot</h2>
    <div class="row g-3">
        @foreach (var metric in Store.Analytics)
        {
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <div class="h5">@metric.Label</div>
                        <div class="display-6">@metric.Value</div>
                        <small class="text-muted">@metric.Trend</small>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
